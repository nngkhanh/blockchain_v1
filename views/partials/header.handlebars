<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Header Sang Trọng - Ví Blockchain</title>
    <link rel="stylesheet" href="css/header.css" />
</head>

<body>
    <header class="main-header">
        <div class="logo">Ví Blockchain</div>

        <nav class="nav-center">
            <a href="/" class="nav-button active">Trang chủ</a>
            <a href="/manage-wallet" class="nav-button">Quản lý ví</a>
            <a href="/transactions" class="nav-button">Giao dịch</a>
            {{!-- <a href="/transactions/history" class="nav-button">Lịch sử giao dịch</a> --}}
            <a href="#" class="nav-button">Cài đặt</a>
            <a href="/test" class="nav-button">Test</a>
        </nav>

        <div class="auth-buttons">
            {{#if isLoggedIn}}
            <h1 class="user-name">{{user.username}}</h1>
            {{else}}
            <a href="/user/login">
                <button class="btn login">Đăng nhập</button>
            </a>
            <a href="/user/register">
                <button class="btn register">Đăng ký</button>
            </a>
            {{/if}}
        </div>

        <!-- Nút hamburger cho mobile -->
        <div class="hamburger">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </header>

    <!-- JavaScript cho hamburger menu -->
    <script>
        const navButtons = document.querySelectorAll('.nav-button');
        const currentPath = window.location.pathname;

        navButtons.forEach(button => {
            if (button.getAttribute('href') === currentPath) {
                button.classList.add('active');
            } else {
                button.classList.remove('active');
            }
        });
    </script>
</body>

</html>